{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "outDir": "./build/esm",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./build",
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "types": [
      "node",
      "jest"
    ]
  },
  "include": [
    "lib/**/*.ts"
  ],
  "compileOnSave": true
}



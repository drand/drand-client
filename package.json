{
  "name": "drand-client",
  "version": "0.2.0",
  "description": "A client to the drand randomness beacon network.",
  "type": "module",
  "main": "lib/drand.js",
  "scripts": {
    "clean": "rm -rf ./build/*",
    "compile": "tsc --project tsconfig.json",
    "test": "ava -v -T 10m",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "author": "Alan Shaw",
  "license": "(Apache-2.0 OR MIT)",
  "devDependencies": {
    "@types/node-fetch": "^2.6.2",
    "abort-controller": "^3.0.0",
    "ava": "^4.3.0",
    "node-fetch": "^2.6.0",
    "standard": "^17.0.0",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@noble/bls12-381": "^1.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/drand/drand-client.git"
  },
  "bugs": {
    "url": "https://github.com/drand/drand-client/issues"
  },
  "homepage": "https://github.com/drand/drand-client#readme",
  "engines": {
    "node": ">= 10.4.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "keywords": [
    "drand",
    "random",
    "randomness",
    "client",
    "bls",
    "bls12381"
  ],
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm",
      "--experimental-specifier-resolution=node"
    ]
  }
}
